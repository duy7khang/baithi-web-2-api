@model List<ShopBook187MVC.Models.BookViewModel>

@{
    Layout = "_Layout";
    ViewData["Title"] = "Books";
}

<h1>Books</h1>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Book Name</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>@book.Name</td>
                <td>@book.Price</td>
            </tr>
        }
    </tbody>
</table>
