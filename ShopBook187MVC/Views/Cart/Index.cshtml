@model ShopBook187MVC.Models.CartViewModel

<h1>Your Cart</h1>

<table class="table">
    <thead>
        <tr>
            <th>Book Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Total</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Books)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>1</td>
                <td>@item.Price</td>
                <td>
                    <form asp-action="Remove" method="post">
                        <input type="hidden" name="id" value="@item.Id" />
                        <button type="submit" class="btn btn-danger">Remove</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<h3>Total Price: @Model.TotalPrice</h3>

<a href="/Cart/Checkout" class="btn btn-success">Checkout</a>
